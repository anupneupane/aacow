<% @page_title = 'Contact Us' %>
<%- content_for :head do -%>
	<%= javascript_include_tag 'live_validation' %>
<%- end -%>
<%- content_for :right do -%>
	<%= render :partial => 'layouts/vcard' %>
<%- end -%>
<h1>Allergy and Asthma Care of Waco</h1>
<h4>Phone (254) 753-3646</h4>
<h4>Fax (254) 753-1411</h4>

<h2>Email us through the below form. Choose from the drop down list what best represents your inquiry</h2>
<%= content_tag 'div', h(flash[:notice]), :class => 'flash', :id => 'flash' if flash[:notice] %>
<%= content_tag 'div', h(flash[:error]), :class => 'error', :id => 'flash' if flash[:error] %>
<p>
	<form id="contact-form" method="post" action="send_contact_form">
		<%= token_tag %>
  	<p><label for="contact_author">Your name</label><input type="text" id="contact_author" name="contact[author]" value="" /></p>
		<script type="text/javascript" charset="utf-8">
			var contact_author = new LiveValidation('contact_author', {onlyOnBlur: true });
			contact_author.add(Validate.Presence, {"validMessage": ""});
		</script>
  	<p><label for="contact_author_email">Email Address</label><input type="text" id="contact_author_email" name="contact[author_email]" value="" /></p>
		<script type="text/javascript" charset="utf-8">
			var contact_author_email = new LiveValidation('contact_author_email', {onlyOnBlur: true });
			contact_author_email.add(Validate.Presence, {"validMessage": ""});
		</script>
  	<p><label for="contact_subject">Subject</label> 
                <select id="contact_subject" name="contact[subject]">
                  <option value="Service_Question">Service Questions</option>
                  <option value="General_Allergy_Question">General Allergy Information</option>
                  <option value="Employment">Employment</option>
									<option value="Research_Studies">Research Studies</option>
									<option value="Media_and_Press">Media &amp; Press</option>
                </select>
    </p>	
  	<p><label for="contact_body">Your Message</label> <textarea id="contact_body" name="contact[body]" rows=10></textarea></p>
  	<p><input type="submit" value="Send Your Message" /></p>
	</form>
</p>

