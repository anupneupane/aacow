<%- @research_studies.each do |research_study| -%>
<div class="container large-container">
	<div class="container-foot">
		<h2><%= research_study.title.upcase %></h2>
		<%= content_tag :p, "#{research_study.starts_at.strftime('%B, %d %Y')} to #{research_study.ends_at.strftime('%B, %d %Y')}", :class => 'date' if research_study.starts_at %>
		<p><%= research_study.description %></p>
	</div>
</div>
<%- end -%>
<%= will_paginate @research_studies, :params => params if @research_studies %>
<h2>Email us. Choose from the drop down list what best represents your inquiry.</h2>
<%= content_tag 'div', h(flash[:notice]), :class => 'flash', :id => 'flash' if flash[:notice] %>
<%= content_tag 'div', h(flash[:error]), :class => 'error', :id => 'flash' if flash[:error] %>
