<h1>Users</h1>

<%# will_paginate @users %>

<table border="0" cellspacing="0" cellpadding="0" class="wide forums">
  <tr>
    <th class="la" width="88%"><%= 'Name / Login' %></th>
	<% if logged_in? && current_user.admin? -%>
	<th><%= "Current Status" %></th>
	<% end -%>
    <th class="rt">Actions</th>
  </tr>
<%- unless @users.nil?  -%>
<% @users.each do |user| -%>  
  <tr class="<%= cycle "","odd" %>">
    <td><%= h(user.display_name || user.login) %></td>
		<td class="rt"><%= link_to "Edit", edit_admin_user_path(user) %> | <%= link_to "Destroy", admin_user_path(user), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<%- end -%>
<%# will_paginate @users %>
